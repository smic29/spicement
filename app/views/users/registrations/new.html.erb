<h2>Sign up</h2>

<%= turbo_frame_tag "users_frame" do %>
<div class="p-5 rounded-4 shadow-lg">
  <div class="text-center font-robo">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.hidden_field :company_id, value: current_user.company.id  %>

      <div class="field form-floating mb-3">
        <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :email %>
      </div>

      <div class="row mb-3">
        <div class="col-6">
          <div class="field form-floating">
            <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-control" %>
            <%= f.label :password %>
          </div>
          <div class="form-text">
            <%= "minimum of #{@minimum_password_length} characters" %>
          </div>
        </div>

        <div class="col-6">
          <div class="field form-floating">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "form-control" %>
            <%= f.label :password_confirmation %>
          </div>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-6">
          <div class="field form-floating">
            <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
            <%= f.label :first_name %>
          </div>
        </div>

        <div class="col-6">
          <div class="field form-floating">
            <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
            <%= f.label :last_name %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Add User", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
