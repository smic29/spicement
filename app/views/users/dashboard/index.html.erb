<div class="container-fluid vh-100 px-0 d-flex flex-column">
<%= render 'users/navbar' %>
<div class="d-flex flex-grow-1">
    <div class="col-1 p-2 d-flex flex-column" style="background-color: #D6E6F2">
        <div class="flex-grow-1 d-flex flex-column justify-content-between align-items-center">
            <h6 class="font-robos text-center">
                <%= current_user.company.name %>
            </h6>

            <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        </div>
    </div>

    <div class="col-10 flex-grow-1">
        <div class="container p-3">
            Hello World! <br>
            Logged in under: <%= current_user.company.name %> <br>
            as: <%= current_user.email %>
            <br>
            <%= current_user.company.email %>


        </div>
    </div>
</div>
</div>