<div class="col-1 p-2 d-flex flex-column" style="background-color: #D6E6F2">
    <div class="flex-grow-1 d-flex flex-column justify-content-between align-items-center">
        <div class="text-center">
            <h6 class="font-robos text-center mb-0">
                <%= current_user.company.name %>
            </h6>
            <%= badge_for current_user %>
        </div>

        <div class="text-center">
            <nav class="nav flex-column nav-underline" data-controller="navbar">
                <% if current_user.manager? %>
                <%= link_to 'Add A User', new_user_registration_path, class: "nav-link text-reset user-select-none", data: { turbo_frame: :users_frame, navbar_target: :links } %>
                <% end %>
                <%= link_to 'Quotations', users_quotations_path, class: "nav-link text-reset user-select-none", data: { turbo_frame: :users_frame, navbar_target: :links } %>
                <%= link_to 'Bookings', users_bookings_path, class: "nav-link text-reset user-select-none", data: { turbo_frame: :users_frame, navbar_target: :links } %>
                <%= link_to 'Billings', users_billings_path, class: "nav-link text-reset user-select-none", data: { turbo_frame: :users_frame, navbar_target: :links } %>
            </nav>
        </div>
        <div class="text-center">
        <%= link_to users_profile_path, class: "text-reset", data: { turbo_frame: :users_frame } do %>
            <i class="bi bi-person-badge fs-1"></i>
        <% end %>
        <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        </div>
    </div>
</div>