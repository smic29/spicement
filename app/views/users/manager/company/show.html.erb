<%= turbo_frame_tag "users_frame" do %>
<div class="font-robo">
    <div class="p-3 shadow border rounded">
        <div class="row mb-3">
            <div class="d-flex align-items-center">
                <div>
                    <% if @company.logo.attached? %>
                    <image src="<%= (url_for(@company.logo))%>" class="image-fluid" style="height: 3rem; width:auto;">
                    <% end %>
                </div>
                <div>
                    <h3 class="font-robos m-0"><%= @company.name %></h3>
                </div>
            </div>
        </div>

        <div class="fw-light mb-3 d-flex flex-column">
            <div class="mb-1">
                <span class="fw-semibold">Company Email: </span>
                <div class="ps-2">
                    <%= @company.email %>
                </div>
            </div>
            <div class="mb-1">
                <span class="fw-semibold">Company Address: </span>
                <div class="ps-2">
                    <%= @company.address.nil? ? "None" : @company.address %>
                </div>
            </div>
            <div class="mb-1">
                <span class="fw-semibold">Company Number: </span>
                <div class="ps-2">
                    <%= @company.contact_number.nil? ? "None" : @company.contact_number %>
                </div>
            </div>
        </div>

        <div class="col-6">
            
        </div>

        <div class="text-center">
            <%= link_to 'Edit', edit_users_manager_company_path, class: "btn btn-outline-warning" %>
        </div>
    </div>
</div>
<% end %>